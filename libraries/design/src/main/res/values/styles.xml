<resources>

    <style name="TextAppearance.App.Title.Toolbar" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_title_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Title.Large" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_headline_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Label.Large" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_label_large</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Title.Medium" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_title_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Headline.Medium" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_headline_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Body.Medium" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_body_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Body.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">50dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">@dimen/text_size_body_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@color/colorOnPrimaryContainer</item>
    </style>

    <style name="Widget.Custom.IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconSize">24dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

</resources>
